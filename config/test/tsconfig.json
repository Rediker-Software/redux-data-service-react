{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "outDir": "../../test-dist",
    "baseUrl": "../../src",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "include": [
    "../../types"
  ],
  "types": ["intern"]
}
